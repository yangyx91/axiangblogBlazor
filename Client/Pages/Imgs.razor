@page "/imgs"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Graph
@inject HttpClient http
@attribute [Authorize]
@inject GraphServiceClient GraphClient

<h3>Imgs</h3>


@if (user != null)
{
    @if (imageDocuments.Count > 0)
    {
        <h4>Images</h4>

        <div class="card" style="width:30rem;">
            <div class="card-body">
                @foreach (var img in imageDocuments)
                {
                    <p>ImgId:@img.ImgId</p>
                    <img class="rounded m-1" src="@img.Url" />
                    <p>Name:@img.Name</p>
                    <p>UpyunPath:@img.UpyunPath</p>
                    <p>Creator:@img.Creator</p>
                }
            </div>
        </div>
    }
}

<p><button class="btn btn-primary" @onclick="GetImgs">获取图片</button></p>

@code {
    private string imageName;

    private long upYunBucketUsage = 0;

    private IList<ImgDocument> imageDocuments = new List<ImgDocument>();

    private User user;

    protected async override Task OnInitializedAsync()
    {
        var request = GraphClient.Me.Request();
        user = await request.GetAsync();
    }

    private async Task GetImgs()
    {
        var imgResult = await http.GetFromJsonAsync<QueryImgDocumentResult>("api/allimgs");
        if (imgResult!=null&&imgResult.total_rows>0)
        {
            var allImgs = imgResult.rows;
            foreach (var item in allImgs)
            {
                imageDocuments.Add(item.doc);
            }
        }
    }

}
